<h1 class="main title"><%= @band.name() %></h1>

<% if @venues.any?() %>
<form action="/bands/<%= @band.id()%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <% @venues.each() do |venue| %>
  <div class="checkbox">
    <label>
      <input type="checkbox" name="venue_ids[]" value="<% venue.id() %>"><%= venue.name() %>
    </label>
  </div>
  <% end %>
  <button type="submit">Add Venues</button>
</form>
<% end %>

<ul>
  <% @band.venues().each() do |venue| %>
  <li><%= venue.name()%></li>
  <% end %>
</ul>

  <h3>Update the Name of the Band </h3>

  <form action="/bands/<%= @band.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for "name">Rename the client:</label>
    <input id="name" name="name" type="text">
    <button type="submit">Update</button>
  </form>

  <h3>Remove this Band</h3>
  <form action="/bands/<%= @band.id() %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit">Delete Band</button>
  </form>
